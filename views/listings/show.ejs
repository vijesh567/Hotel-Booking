<% layout("/layouts/boilerplate")%>

<div class="row ok mt-3">
  <div class="col-8 offset-2">
    <h3 style="color:yellow">Coach Details</h3>
    <div class="card col-6">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text"><%=listing.title %></p>
        <ul>
          <li><%=listing.description %></li>
          <li>&#8377;<%=listing.price.toLocaleString("en-IN") %></li>
          <li><%=listing.location %></li>
          <li><%=listing.country %></li>
        </ul>

        <div class="d-flex gap-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-light edt-btn">Edit Hotel</a>
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-light del-btn">Delete Coach</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
